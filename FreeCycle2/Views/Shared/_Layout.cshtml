<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FreeCycle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FreeCycle", "Index", "Home", new { area = "" }, new { @class="navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <div id="navbar container">
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "HomePage", "Home")</li>
                        <li>@Html.ActionLink("Browse Ads", "Item", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav ">
                        <li>
                            <form class="navbar-form navbar-left" role="search" action="@Url.Action("Search", "Search")" name="Form" method="post" onsubmit="return CheckNull()">
                               
                                    <input class="form-control" type="text" id="search" name="search" placeholder="Search" aria-label="Search">
                                
                                   <button class="btn btn-default "type="submit" >Search</button>
                            </form>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">

                        <li>  @Html.ActionLink("Login", "Login", "Auth", null, null)</li>
                        <li style="align-content:end;">@Html.ActionLink("Post", "Post", "Home", null, null)</list>



                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br/>
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FreeCycle</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>

    function CheckNull() {

        var a = document.forms["Form"]["search"].value;
        if (a == null || a == "") {
            alert("Please enter a search item..");
            return false;
        }
        return true;

    }
</script>