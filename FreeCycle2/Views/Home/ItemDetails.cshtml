@using FreeCycle2.Models
@{
    ViewBag.Title = "ItemDetails";
}



<div class="container-fluid">
    <div class="row">


        <div class="col-lg-6">


            @{ if ((List<Item>)ViewData["itemlist45"] != null)
                {



                    foreach (var product in (List<Item>)ViewData["itemlist45"])
                    {
                        var base64 = Convert.ToBase64String(product.image);
                        var img = string.Format("data:Image/jpg;base64,{0}", base64);


                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div style="font-family: Helvetica, Sans-Serif;font-size: 36pt;">@product.item_title</div>
                                </div>
                            </div>
                            <div class="row">


                                <div class="col-sm-12">
                                    <img src="@img" width="300px" height="300px" style="border:solid" /> 
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div style=" font-family:  Times New Roman, Times, serif; font-size: 20pt;">@product.item_detail</div>
                                    <div style=" font-family:  Times New Roman, Times, serif; font-size: 10pt;">@product.create_date</div>
                                </div></div>
                                </div>

                                }

                                } }

                            </div> <div class="col-lg-6"></div>
                        </div>
</div>




