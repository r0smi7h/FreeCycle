
@using FreeCycle2.Models
@{
    ViewBag.Title = "ItemDetails";
}

<style>
    body {
        background-color: ghostwhite;
    }
    .div1 {
        box-shadow: 0px 0px 8px #888888;
    }

    h1 {
        text-align: left;
        font-size: xx-large;
        color: black;
        font-weight: 100;
    }
    .div3 {
        background-color: #E0E0E0;
        padding: 5px;
        box-shadow: 0px 0px 5px #888888;
    }
    .contact-info {
        font-size: larger;
        font-weight: bold;
        color: darkblue;
    }
    .name-div {
        font-size: large;
    }
    .email-div {
        font-size: medium;
        color: grey;
    }
    .not-loggedin {
        font-size: medium;
    }
    .item-detail {
        font-size: large;
        text-align: left;
    }
    .create-date {
        text-align: left;
        font-size: small;
        color: grey;
    }
    img {
        border: solid;
    }
    .div4 {
        height: 400px;
    }
</style>


<div class="container-fluid">
    <div class="row">


        <div class="col-lg-12" align="center">


            @{ if ((List<Item>)ViewData["itemlist45"] != null)
                {

                    foreach (var product in (List<Item>)ViewData["itemlist45"])
                    {
                        var base64 = Convert.ToBase64String(product.image);
                        var img = string.Format("data:Image/jpg;base64,{0}", base64);


                        <div class="container-fluid div1">
                            <div class="row">
                                <div class="col-lg-12 div2">
                                    <h1>@product.item_title</h1>
                                </div>
                            </div>
                            <div class="row div4">
                                <br /><br />
                                <div class="col-lg-6">
                                    <img src="@img" width="350" height="300"/>
                                </div>
                                <br /> <br /> <br />  <br />
                                <div class="col-lg-1"></div>

                                <div class="col-lg-4 div3">

                                    <div class="contact-info">Contact Information</div>
                                    <div class="name-div">@product.first_name @product.last_name</div>

                                    @if (Request.Cookies["first_name"] != null)
                                    {
                                        <div class="email-div">@product.email</div>
                                        <a href="mailto: @product.email?Subject=@product.item_title" class="btn btn-primary">Contact</a>
                                    }
                                    else
                                    {
                                        <div class="not-loggedin">Login to contact </div>
                                    }

                                </div>
                                <div class="col-lg-1"></div>
                                <br /><br />
                            </div>
                            <div class="row" align="left" >
                                <div class="col-lg-12">
                                    <p class="item-detail">@product.item_detail</p>

                                </div>

                                <br /><br /><br /><br /><br /><br /><div> <div class="col-lg-12 create-date"><p>Posted on: @product.create_date </p> </div> </div>
                            </div>
                        </div> }

                } }

        </div>
    </div>
</div>


