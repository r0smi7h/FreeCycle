@using FreeCycle2.Models
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FreeCycle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    .col-sm-4 .image-container {
        border: solid;
    }

    .col-sm-3 .title-container {
        border: solid;
        background-color: black;
    }
</style>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@{
    ViewBag.Title = "ItemDetails";


}


<div class="container">


    @{ if ((List<Item>)ViewData["itemlist45"] != null)
        {
            foreach (var product in (List<Item>)ViewData["itemlist45"])
            {
                var base64 = Convert.ToBase64String(product.image);
                var img = string.Format("data:Image/jpg;base64,{0}", base64);
                <div class="row">
                    <div class="col-sm-4 image-container" >
                        <div>
                            <img src="@img" width="300" height="300" />
                        </div>

                    </div>

                    <div class="col-sm-3 title-container">
                        <div class="row">
                            <h1 style="padding:5px;">@product.item_title</h1>
                        </div>

                        <div class="row">
                            <p style="padding:5px;">@product.item_detail</p>
                        </div>
                        <div class="row">
                            <br>
                            <p>*Ower Name*</p>
                            <input type="submit" value="Request" name="Request" class="btn btn-default" />
                        </div>
                    </div>

                    

                </div>




            }

        } }



</div>




