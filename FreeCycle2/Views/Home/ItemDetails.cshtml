
@using FreeCycle2.Models
@{
    ViewBag.Title = "ItemDetails";
}



<div class="container-fluid">
    <div class="row">


        <div class="col-lg-12" align="center">


            @{ if ((List<Item>)ViewData["itemlist45"] != null)
                {



                    foreach (var product in (List<Item>)ViewData["itemlist45"])
                    {
                        var base64 = Convert.ToBase64String(product.image);
                        var img = string.Format("data:Image/jpg;base64,{0}", base64);


                        <div class="container-fluid" style="box-shadow: 0px 0px 8px #888888;">
                            <div class="row">
                                <div class="col-lg-12" style="background-color:#F8F8F8;">
                                    <h1 style="text-align:left; font-size:xx-large; color:black; font-weight:100;">@product.item_title</h1>
                                </div>
                            </div>
                            <div class="row" style=" height: 400px;">
                                <br /><br />
                                <div class="col-lg-6">
                                    <img src="@img" width="350" height="300" style="border:solid" />
                                </div>
                                <br /> <br /> <br />  <br />
                                <div class="col-lg-1"></div>

                                <div class="col-lg-4" style="background-color:#E0E0E0; padding:5px; box-shadow: 0px 0px 5px #888888;   ">

                                    <div style="font-size:larger; font-weight:bold; color:darkblue;">Contact Information</div>
                                    <div style="font-size: large;">@product.first_name @product.last_name</div>

                                    @if (Request.Cookies["first_name"] != null)
                                    {
                                        <div style="font-size: medium; color:grey;">@product.email</div>
                                        <a href="mailto: @product.email?Subject=@product.item_title" class="btn btn-primary">Contact</a>
                                    }
                                    else
                                    {
                                        <div style="font-size: medium;">Login to contact </div>
                                    }

                                </div>
                                <div class="col-lg-1"></div>
                                <br /><br />
                            </div>
                            <div class="row" align="left" style="  ">
                                <div class="col-lg-12">
                                    <p style="font-size: large; text-align:left;">@product.item_detail</p>

                                </div>


                                <br /><br /><br /><br /><br /><br /><div> <div class="col-lg-12"><p style=" text-align:left; font-size: small; color:grey;">Posted on: @product.create_date </p> </div> </div>
                            </div>
                        </div> }

                } }

        </div>
    </div>
</div>


