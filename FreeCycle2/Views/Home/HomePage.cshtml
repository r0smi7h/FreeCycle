@model FreeCycle2.Models.ViewModel1

@{
    ViewBag.Title = "HomePage";

}

<style>
        body{
            background-color:ghostwhite;
        }
    .col-xs-3 {
        background-color: ghostwhite;
        text-align: center;
        font-size: medium;
    }
        .thumbnail{
            background-color:ghostwhite;
        }

    .slanted {
        font-size: 40px;
        text-transform: uppercase;
        transform: rotate(-5deg) skew(-5deg);
        background-color: #ffc;
    }
        

</style>

<h1> Categories</h1>


@using (Html.BeginForm("AllCategories", "Home", FormMethod.Post))
{
    var i = Model.Categs.Items.Count();

    if (i >= 4)
    {
        @Html.HiddenFor(m => m.EditIndex)
     
        @:<div class="container">
              <div class="row">

                  <div class="col-xs-3" >
                      <a href="/Home/Item?categoryID=1" class="thumbnail">
                          <img src="~/Images/office_furniture_img.jfif" alt="Office Supplies" />
                      </a>
                      <a href="/Home/Item?categoryID=1" class="thumbnail" style="border:none; color:black;">

                          @Html.DisplayFor(m => m.Categs.Items[i - 4].Category_name)
                          </a>
                  </div>

                  <div class="col-xs-3" >
                      <a href="/Home/Item?categoryID=2" class="thumbnail">
                          <img src="~/Images/office_supplies_img.jfif" alt="Office Supplies" />
                      </a>
                      
                      <a href="/Home/Item?categoryID=2" class="thumbnail" style="border:none; color:black;">
                          @Html.DisplayFor(m => m.Categs.Items[i - 3].Category_name)
                      </a>
                  </div>

                  <div class="col-xs-3">
                      <a href="/Home/Item?categoryID=3" class="thumbnail">
                          <img src="~/Images/tech_equipment_img.jpg" alt="Office Supplies" />
                      </a>
                     
                      <a href="/Home/Item?categoryID=3" class="thumbnail" style="border:none; color:black;">
                          @Html.DisplayFor(m => m.Categs.Items[i - 2].Category_name)
                      </a>
                  </div>


                  <div class="col-xs-3" >
                      <a href="/Home/Item?categoryID=4" class="thumbnail">
                          <img src="~/Images/other_img.jfif" alt="Office Supplies" />
                      </a>
                      
                      <a href="/Home/Item?categoryID=4" class="thumbnail" style="border:none; color:black;">
                          @Html.DisplayFor(m => m.Categs.Items[i - 1].Category_name)
                      </a>
                  </div>

              </div>@:</div>
    }
    else
    {
        <h1 style="height: 20vh; display: flex; flex-direction: column; justify-content: center; text-align: center;" class="slanted">Not Enough Categories to Display</h1>
    }
}


