@model FreeCycle2.Models.Item

@using (Html.BeginForm("Post", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h2>Post an Item</h2>
  
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.user_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(m => m.user_id, new { @Value = userID })


<div class="form-group">
    <div class="col-sm-1">
        @Html.LabelFor(model => model.category_id, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-11">
            @Html.EditorFor(model => model.category_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.item_title, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.item_title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.item_title, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.item_detail, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.item_detail, new { htmlAttributes = new { @class = "form-control", @style = "height:150px; width: 450px;" } })
            @Html.ValidationMessageFor(model => model.item_detail, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">
            <input asp-for="Picture" type="file" name="file" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Post" style=" background-color:#189db3;  color:white;" name="Save" class="btn btn-default" />
        </div>
    </div>

</div>

    }

}



else
{ Response.Redirect("~/Auth/Login"); }