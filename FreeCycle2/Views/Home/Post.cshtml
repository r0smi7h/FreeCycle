@model FreeCycle2.Models.Item

@if (Request.Cookies["first_name"] != null)
{
    var userID = Request.Cookies["user_id"].Value;


    using (Html.BeginForm("Post", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h2>Post an Item</h2>
  
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @Html.HiddenFor(m => m.user_id, new { @Value = userID })


<div class="form-group">
    <div class="col-sm-1">
        @Html.LabelFor(model => model.category_id, htmlAttributes: new { @class = "control-label col-md-1" })

    </div>
    <div class="col-sm-11">
        @Html.DropDownListFor(model => model.category_id, new SelectList(Enum.GetValues(typeof(FreeCycle2.Models.Category.CategoryType)).OfType<FreeCycle2.Models.Category.CategoryType>().ToDictionary(x => Convert.ToInt32(x), y => y.ToString()), "Key", "Value"), "Select Category")
    </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.item_title, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.item_title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.item_title, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.item_detail, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.item_detail, new { htmlAttributes = new { @class = "form-control", @style = "height:150px; width: 450px;" } })
            @Html.ValidationMessageFor(model => model.item_detail, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(m => m.is_active, new { @Value = "1" })
    @Html.HiddenFor(model => model.create_date, new { @Value = DateTime.Now.Date.ToString("yyyy-MM-dd") })
    @Html.HiddenFor(model => model.last_renewed_on, new { @Value = DateTime.Now.Date.ToString("yyyy-MM-dd") })

    <div class="form-group">
        <div class="col-md-10">
            <input asp-for="Picture" type="file" name="file" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" style="background-color:#189db3;  color:white;" name="Save" class="btn btn-default" />
        </div>
    </div>

</div>

    }

}



else
{ Response.Redirect("~/Auth/Login"); }