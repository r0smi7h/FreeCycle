@model FreeCycle2.Models.User
@{
    ViewBag.Title = "Login";
    string errormsg = (string)ViewData["warningPassword"];
    string errormsg1 = (string)ViewData["warningUsername"];
}


<div class="container-fluid">
    <br />
    <div class="row">


        <div class="col-lg-12">

            @if (Request.Cookies["first_name"] != null)
            {
                var userID = Request.Cookies["user_id"].Value;
                <center>
                    <div class="row">
                        <div class="col-sm-12">

                            <a class="btn btn-primary" href="@Url.Action("RemoveData","Auth")">Logout</a>

                        </div>
                    </div>
                </center>

            }
            else
            {
                using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                {
                    <div class="container-fluid">
                        <center>
                            <br />
                            <div style="border:1px solid lightgrey;background-color:white;border-radius:30px;padding:50px; box-shadow: 0 1px 9px 0 rgba(0, 0, 0, 0.6), 0 1px 10px 0 rgba(0, 0, 0, 0.19);">
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", @placeholder = " Username", @style = "background-color:whitesmoke" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(model => model.email, null, new { @style = "color:indianred" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12" style="color:indianred;">@errormsg1</div>
                                </div>
                                <br />

                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.PasswordFor(model => model.login_pwd_encry, new { @class = "form-control", @placeholder = " login_pwd_encry", @style = "background-color:whitesmoke" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(model => model.login_pwd_encry, null, new { @style = "color:indianred" })
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-sm-12" style="color:indianred;">@errormsg</div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="submit" style="width:80px;color:dimgray" value="Login" class="btn btn-default" />
                                    </div>
                                </div>

                            </div>
                        </center>
                    </div>


                }
            }
        </div>
    </div>
    <br />
    <br />
</div>




